
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Microsoft.AspNetCore.Identity.IdentityUser> 
<h2>Users list</h2>
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @user.Email
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">User roles</a>
                </td>
            </tr>
        }
    </tbody>
    <a class="btn btn-default" asp-area="" asp-controller="Roles" asp-action="Index">Roles</a>
</table>
