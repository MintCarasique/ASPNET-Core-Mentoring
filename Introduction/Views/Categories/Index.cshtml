
@{
    ViewData["Title"] = "Index";
}

<h2>List of categories</h2>
<table class="table">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
        <tr>
            <td>
                @category.CategoryName
            </td>
            <td>
                @category.Description
            </td>
            <td>
                <a class="btn-primary" asp-action="Edit" asp-route-id="@category.CategoryID">Edit</a>
            </td>
        </tr>
        }
    </tbody>
</table>

